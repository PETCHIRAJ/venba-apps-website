---
export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Venba Apps - Venba Dev Mobile Applications Portfolio',
  description = 'Venba Apps by Venba Dev - Privacy-focused mobile applications including expense trackers, productivity tools, and educational apps. Building simple, useful apps for everyday needs.'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content="Venba Apps, Venba Dev, Venba Developer, mobile apps, Privacy Expense Tracker, expense tracker app, Android apps, privacy-focused apps">
    <meta name="author" content="Venba Dev">
    <link rel="canonical" href={`https://apps.venba.dev${Astro.url.pathname}`}>

    <!-- Open Graph / Social Media Meta Tags -->
    <meta property="og:title" content={title}>
    <meta property="og:description" content="Privacy-focused mobile apps for expense tracking, financial planning, and everyday productivity.">
    <meta property="og:image" content="https://apps.venba.dev/images/brand_icon.png">
    <meta property="og:url" content="https://apps.venba.dev">
    <meta property="og:type" content="website">

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content="Privacy-focused mobile apps for expense tracking, financial planning, and everyday productivity.">
    <meta name="twitter:image" content="https://apps.venba.dev/images/brand_icon.png">

    <link rel="icon" type="image/png" href="/images/brand_icon.png">
    <link rel="apple-touch-icon" href="/images/brand_icon.png">
    <link rel="stylesheet" href="/style.css">

    <!-- Structured Data for Venba Apps / Venba Dev -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Venba Apps",
        "alternateName": ["Venba Dev", "Venba Developer"],
        "url": "https://apps.venba.dev",
        "logo": "https://apps.venba.dev/images/brand_icon.png",
        "description": "Venba Apps develops privacy-focused mobile applications for Android",
        "email": "contact.venbaapps@gmail.com",
        "sameAs": [
            "https://play.google.com/store/apps/dev?id=8464608221563186460"
        ],
        "founder": {
            "@type": "Person",
            "name": "Venba Dev"
        }
    }
    </script>

    <!-- Firebase Analytics -->
    <script type="module">
        // Import the functions you need from the SDKs you need
        import { initializeApp } from "https://www.gstatic.com/firebasejs/12.4.0/firebase-app.js";
        import { getAnalytics } from "https://www.gstatic.com/firebasejs/12.4.0/firebase-analytics.js";

        // Your web app's Firebase configuration
        const firebaseConfig = {
            apiKey: "AIzaSyD4tI9OQIyGfg_ZhaJunOpzHgCjgJz29BU",
            authDomain: "venba-apps.firebaseapp.com",
            databaseURL: "https://venba-apps-default-rtdb.firebaseio.com",
            projectId: "venba-apps",
            storageBucket: "venba-apps.firebasestorage.app",
            messagingSenderId: "663923344955",
            appId: "1:663923344955:web:5bd49e90f42135d3dd3e1e",
            measurementId: "G-C6S1XKRW12"
        };

        // Initialize Firebase
        const app = initializeApp(firebaseConfig);
        const analytics = getAnalytics(app);
    </script>

    <slot name="head" />
</head>
<body>
    <div class="container">
        <slot />
    </div>
</body>
</html>