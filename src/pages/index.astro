---
import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
import AppCard from '../components/AppCard.astro';
import Footer from '../components/Footer.astro';
import appsData from '../data/apps.json';
---

<Layout>
    <Header />

    <section class="hero">
        <p class="hero-text">I build mobile applications that solve real problems<br/>with simple, intuitive designs.</p>
    </section>

    <section class="apps">
        <div class="app-grid">
            {appsData.apps.map((app) => (
                <AppCard
                    icon={app.icon}
                    name={app.name}
                    category={app.category}
                    description={app.description}
                    features={app.features}
                    storeLink={app.storeLink}
                    status={app.status as 'available' | 'coming-soon'}
                    isPlaceholder={app.isPlaceholder}
                />
            ))}
        </div>
    </section>

    <section class="about-contact">
        <div class="about-content">
            <h2>About the Developer</h2>
            <p>Solo developer focused on creating mobile applications that make daily tasks easier. I believe in simple design, user privacy, and practical functionality.</p>
            <p>My apps feature local language support and are designed to work seamlessly across different regions and cultures.</p>
        </div>

        <div class="contact-links">
            <a href="mailto:contact.venbaapps@gmail.com" class="contact-link">
